{{- define "login/index.tmpl" }}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <meta name="author" content="" />
    <title>Https Test</title>
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    <script async src="/static/js/app.js"></script>
    <link href="/static/css/app.css" type="text/css" rel="stylesheet" />
</head>
<body>
  <h1>
    {{ .title }}
  </h1>
  <div id="todoApp">
    <h2 v-bind:style="fontStyle">{{"{{ title }}"}}</h2>
    <input type="text" v-model="todo" v-on:keyup.enter="addTodo">
    <div>
      <div v-for="t in todos" v-bind:key="t.id" 
           v-bind:class="['todo-default', t.doing ? 'todo-doing' : '']"
           v-on:click="begin(t)">
        {{"{{t.name}}"}}
      </div>
    </div>
  </div>
</body>
</html>
{{- end }}
